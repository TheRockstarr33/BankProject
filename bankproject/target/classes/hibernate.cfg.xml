<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name = "hibernate.connection.driver.class">com.mysql.jdbc.Driver</property>
        <property name = "hibernate.connection.url">jdbc:mysql://localhost/bankProject</property>
        <property name = "hibernate.connection.username">root</property>
        <property name = "hibernate.connection.password"></property>
        <property name = "show_sql">true</property>

        <!--<property name = "hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>-->
        <!--<property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>-->

        <!--<property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>-->
        <!--<mapping resource="user.hbm.xml" />-->
        <mapping resource="card.hbm.xml" />
        <mapping resource="card_data.hbm.xml" />
        <mapping resource="transaction_history.hbm.xml" />
        <mapping resource="user.hbm.xml" />
        <!--<mapping class = "com.hibernate.entity.User" />-->
        <mapping class = "com.hibernate.entity.Card" />
        <mapping class = "com.hibernate.entity.CardData" />
        <mapping class = "com.hibernate.entity.TransactionHistory" />
        <mapping class = "com.hibernate.entity.User" />
    </session-factory>
</hibernate-configuration>