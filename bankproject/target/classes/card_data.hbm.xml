<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name = "com.hibernate.entity.CardData" table = "card_data">

        <!--SHOULD THIS BE HERE?-->
        <id name="id" type="int">
            <column name="id" />
            <generator class="incriment" />  <!--Necessary?-->
        </id>

        <property name="cardId" type="int">
            <column name="card_id"/>
        </property>

        <property name="pin" type="int">
            <column name="pin"/>
        </property>

        <property name="signupDate" type="timestamp">
            <column name="signup_date"/>
        </property>

        <property name="expireDate" type="timestamp">
            <column name="expire_date"/>
        </property>
    </class>


</hibernate-mapping>